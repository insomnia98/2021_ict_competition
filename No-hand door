from gpiozero import Servo,Button

servo = Servo(26)
button = Button(24)
button1 = Button(5)

import RPi.GPIO as GPIO
import time

GPIO.setmode(GPIO.BCM)

GPIO.setup(17, GPIO.OUT)
GPIO.setup(22, GPIO.IN)

try:
    while True :
        pir_state=GPIO.input(22)
        
        
        
        servo.min()
        print("press the button")
        '''if button1.is_pressed() :
            print('out')
            servo.max()
       '''
        if pir_state == True :
            GPIO.output(17,True)
        else :
            GPIO.output(17,False)
            
        if button.is_pressed or button1.is_pressed:
            #print(button1.value)
            #print(button.value)
            pir_state=GPIO.input(22)
            
        
            if button1.value==1 or (button.value ==1 and pir_state==False ):
                servo.max()
            else :
                print('no')
        time.sleep(1)
                
            
        
except KeyboardInterrupt :
    GPIO.cleanup()

